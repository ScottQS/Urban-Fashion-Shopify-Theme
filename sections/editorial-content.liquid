{% liquid
  assign media_position = section.settings.media_position
%}

<section class="section-shell editorial-content card {{ media_position }}">
  <div class="editorial-content__media">
    {% if section.settings.image != blank %}
      {% render
        'image',
        image: section.settings.image,
        width: 1800,
        class: 'editorial-content__image',
        sizes: '(min-width: 990px) 50vw, 100vw'
      %}
    {% else %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'editorial-content__placeholder' }}
    {% endif %}
  </div>

  <div class="editorial-content__text">
    {% if section.settings.eyebrow != blank %}
      <p class="editorial-content__eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.body != blank %}
      <div class="rte">{{ section.settings.body }}</div>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a class="button button--secondary" href="{{ section.settings.button_link }}">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .editorial-content {
    padding: 0;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    overflow: hidden;
  }

  .editorial-content__image img {
    width: 100%;
    height: 100%;
    min-height: 20rem;
    object-fit: cover;
  }

  .editorial-content__text {
    padding: clamp(1.2rem, 3vw, 2.6rem);
    display: grid;
    gap: 0.9rem;
    align-content: center;
  }

  .editorial-content__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .editorial-content--media-right .editorial-content__media {
    order: 2;
  }

  @media (max-width: 899px) {
    .editorial-content {
      grid-template-columns: 1fr;
    }

    .editorial-content--media-right .editorial-content__media {
      order: 0;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Editorial content",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Story"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bring editorial storytelling to your catalog."
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body text",
      "default": "<p>Use long-form content to communicate fit, materials, and culture around each collection release.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Read more"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "media_position",
      "label": "Image position",
      "options": [
        {
          "value": "editorial-content--media-left",
          "label": "Left"
        },
        {
          "value": "editorial-content--media-right",
          "label": "Right"
        }
      ],
      "default": "editorial-content--media-left"
    }
  ],
  "presets": [
    {
      "name": "Editorial content"
    }
  ]
}
{% endschema %}
