{% liquid
  assign logo_width_desktop = settings.logo_width_desktop | default: 170
  assign logo_width_mobile = settings.logo_width_mobile | default: 130
%}

<header class="site-header">
  <div class="site-header__inner">
    <a class="site-header__brand" href="{{ routes.root_url }}" aria-label="{{ shop.name }}">
      {% if settings.logo %}
        {{
          settings.logo
          | image_url: width: 500
          | image_tag:
            widths: '120,160,200,240,320,400,500',
            width: logo_width_desktop,
            alt: shop.name,
            class: 'site-header__logo'
        }}
      {% else %}
        <span class="site-header__shop-name">{{ shop.name }}</span>
      {% endif %}
    </a>

    <nav class="site-nav" aria-label="Main menu">
      <ul class="site-nav__list" role="list">
        {% for link in section.settings.menu.links %}
          <li class="site-nav__item{% if link.links != blank %} has-children{% endif %}">
            <a href="{{ link.url }}">{{ link.title }}</a>
            {% if link.links != blank %}
              <ul class="site-nav__submenu" role="list">
                {% for child_link in link.links %}
                  <li class="{% if child_link.links != blank %}has-children{% endif %}">
                    <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                    {% if child_link.links != blank %}
                      <ul class="site-nav__submenu site-nav__submenu--third-level" role="list">
                        {% for grandchild_link in child_link.links %}
                          <li><a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a></li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </nav>

    <div class="site-header__actions">
      {% if section.settings.show_search %}
        <div class="predictive-search" data-predictive-search data-endpoint="{{ routes.predictive_search_url }}">
          <form action="{{ routes.search_url }}" method="get" role="search">
            <label for="HeaderSearchInput" class="visually-hidden">Search</label>
            <input
              id="HeaderSearchInput"
              type="search"
              name="q"
              value="{{ search.terms | escape }}"
              placeholder="Search products"
              aria-label="Search products"
              autocomplete="off"
            >
            <input type="hidden" name="options[prefix]" value="last">
          </form>
          <div class="predictive-search__results" data-predictive-results hidden></div>
        </div>
      {% endif %}

      {% if shop.customer_accounts_enabled %}
        <a class="site-header__icon-link" href="{{ routes.account_url }}" aria-label="Account">
          {{ 'icon-account.svg' | inline_asset_content }}
        </a>
      {% endif %}

      <a class="site-header__icon-link site-header__cart-link" href="{{ routes.cart_url }}" aria-label="Cart">
        {{ 'icon-cart.svg' | inline_asset_content }}
        <span class="site-header__cart-count{% if cart.item_count == 0 %} hidden{% endif %}">
          {{ cart.item_count }}
        </span>
      </a>
    </div>
  </div>

</header>

{% stylesheet %}
  .site-header {
    border-bottom: 0;
    background-color: transparent;
    color: var(--color-foreground);
  }

  .site-header__inner {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 1rem;
    align-items: center;
    min-height: 4.5rem;
    padding-block: 0.5rem;
  }

  .site-header__brand {
    text-decoration: none;
  }

  .site-header__logo {
    width: min({{ logo_width_desktop }}px, 42vw);
    height: auto;
  }

  .site-header__shop-name {
    font-family: var(--font-heading-family);
    font-size: 1.3rem;
  }

  .site-nav__list,
  .site-nav__submenu {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .site-nav__list {
    display: flex;
    flex-wrap: wrap;
    gap: 1.2rem;
    justify-content: center;
  }

  .site-nav a {
    text-decoration: none;
    padding: 0.4rem 0;
    display: inline-flex;
    align-items: center;
    min-height: 24px;
  }

  .site-nav__item {
    position: relative;
  }

  .site-nav__submenu {
    position: absolute;
    left: 0;
    top: calc(100% + 0.15rem);
    min-width: 14rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 0.5rem;
    display: none;
    z-index: 20;
  }

  .site-nav__submenu li {
    position: relative;
  }

  .site-nav__submenu--third-level {
    left: 100%;
    top: -0.5rem;
  }

  .site-nav__item:hover > .site-nav__submenu,
  .site-nav__item:focus-within > .site-nav__submenu,
  .site-nav__submenu li:hover > .site-nav__submenu,
  .site-nav__submenu li:focus-within > .site-nav__submenu {
    display: block;
  }

  .site-header__actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .site-header__icon-link {
    position: relative;
    width: 2rem;
    height: 2rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  .site-header__icon-link svg {
    width: 1.4rem;
    height: auto;
  }

  .site-header__cart-count {
    position: absolute;
    top: -0.4rem;
    right: -0.45rem;
    min-width: 1.1rem;
    min-height: 1.1rem;
    border-radius: 999px;
    font-size: 0.7rem;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    background-color: var(--color-accent);
    color: var(--color-accent-foreground);
  }

  .site-header__cart-count.hidden {
    display: none;
  }

  .predictive-search {
    position: relative;
    width: min(20rem, 40vw);
  }

  .predictive-search input {
    width: 100%;
    min-height: 2.45rem;
  }

  .predictive-search__results {
    position: absolute;
    left: 0;
    top: calc(100% + 0.25rem);
    width: 100%;
    max-height: 20rem;
    overflow: auto;
    z-index: 21;
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    background-color: var(--color-surface);
    padding: 0.5rem;
  }

  .predictive-search__list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .predictive-search__item + .predictive-search__item {
    margin-top: 0.3rem;
  }

  .predictive-search__item a {
    display: flex;
    justify-content: space-between;
    text-decoration: none;
    padding: 0.35rem;
    border-radius: 0.45rem;
  }

  .predictive-search__item a:hover {
    background-color: var(--color-muted);
  }

  .predictive-search__empty {
    margin: 0;
    padding: 0.45rem;
  }

  @media (max-width: 989px) {
    .site-header__inner {
      grid-template-columns: 1fr auto;
      row-gap: 0.8rem;
      padding-block: 0.6rem;
    }

    .site-header__brand {
      grid-column: 1 / -1;
    }

    .site-nav {
      grid-column: 1 / 2;
      overflow-x: auto;
      min-width: 0;
    }

    .site-header__actions {
      grid-column: 2 / 3;
      justify-self: end;
      align-self: center;
    }

    .site-nav__list {
      justify-content: flex-start;
      width: max-content;
      padding-bottom: 0;
      gap: 1rem;
    }

    .predictive-search {
      width: min(12rem, 46vw);
    }

    .site-header__logo {
      width: min({{ logo_width_mobile }}px, 40vw);
    }
  }

  @media (max-width: 749px) {
    .predictive-search {
      display: none;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show search input",
      "default": true
    }
  ]
}
{% endschema %}
